<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Slider?>
<VBox fx:controller="at.technikum.ode.gui.MemoryGameController" xmlns:fx="http://javafx.com/fxml" alignment="CENTER" spacing="3">
    <HBox alignment="CENTER">
        <Slider fx:id="gameLevelSlider">
            <min>4</min>
            <max>8</max>
            <value>6</value>
            <majorTickUnit>2</majorTickUnit>

            <minorTickCount>0</minorTickCount>
            <blockIncrement>2</blockIncrement>
            <showTickMarks>true</showTickMarks>
            <showTickLabels>true</showTickLabels>
            <snapToTicks>true</snapToTicks>
            <minWidth>400</minWidth>
        </Slider>
    </HBox>
    <HBox spacing="10" alignment="CENTER">
        <padding>

            <Insets>
                <bottom>5</bottom>
                <top>25</top>
                <left>5</left>
                <right>5</right>
            </Insets>

        </padding>
        <Button fx:id="restartGameButton" text="New Game"/>
        <Button fx:id="chooseRootDirButton" text="Change dir" />
    </HBox>

    <GridPane fx:id="memoryCardGrid"
               xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    </GridPane>
</VBox>

